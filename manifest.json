{
    "manifest_version": 3,
    "name": "YouTube Max Quality Switcher",
    "version": "1.0",
    "description": "Automatically switches YouTube videos to the highest available quality.",
    "permissions": [
        "activeTab",
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "script.js"
            ]
        }
    ],
    "icons": {
        "48": "icon.png"
    },
    "action": {
        "default_icon": {
            "48": "icon.png"
        }
    }
}